
@{
    ViewBag.Title = "Iniciar sesión";
}
<div class="container"  style="max-width: 40%; min-width: 380px;">
    <form action="/examples/actions/confirmation.php" method="post">
        <h2 class="text-center">Inicio de sesión</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Nombre de usuario" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Contraseña" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning btn-block" style="color: #FFF;">Acceder</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Recordarme</label>
        </div>
    </form>
</div>
<br />
<p class="text-center">
    @Html.ActionLink("Crear cuenta", "SignUp", "Home")
</p>