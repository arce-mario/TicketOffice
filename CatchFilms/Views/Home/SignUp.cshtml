
@{
    ViewBag.Title = "Registrarse";
}

<div class="container" style="max-width: 60%; min-width: 380px;">

<form action="/examples/actions/confirmation.php" method="post">
    <h2 class="text-center">Registrar cuenta de usuario</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Primer nombre" required="required">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Primer apellido" required="required">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Fecha de nacimiento</label>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="date" class="form-control" required="required">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Correo electrónico" required="required">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Nombre de usuario" required="required">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Contraseña" required="required">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" class="btn btn-warning btn-block" style="color: #FFF;">Acceder</button>
            </div>
        </div>
    </div>

</form>
</div>
