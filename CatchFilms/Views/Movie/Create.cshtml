@model CatchFilms.Models.Movie
@Styles.Render("~/Content/css/functions.css")
@{
    ViewBag.Title = "Registrar película";
}
<style>
    .text-area{
        width: 100%;
    }
</style>
<div class="container" style="max-width: 60%; min-width: 380px;">
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <h5 class="section-title">@ViewBag.Title</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            @if (ViewBag.InfoMessage != null)
            {
                <div class="alert alert-success" role="alert">
                    <strong>Finalizado! </strong>@ViewBag.InfoMessage
                </div>
            }
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            @Html.LabelFor(model => model.classification, htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                @Html.EditorFor(model => model.classification, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.classification, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-group">
                @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control without_ampm", step = "1", type = "time", min = "00:00:00", max = "03:59:00" } })
                @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12">
            @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                @Html.TextAreaFor(model => model.description, new { @class = "form-control form-control-full"})
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit">Registrar película</button>
            <a href="@Url.Action("index","movie")" class="btn btn-success">Volvar a la lista de películas</a>
        </div>
    }
</div>