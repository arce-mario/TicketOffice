@model CatchFilms.Models.LoginUser

@{
    string baseUrl = string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"));
    ViewBag.Title = "Iniciar sesión";
}

<div class="container"  style="max-width: 40%; min-width: 380px;">
    @using (Html.BeginForm())
    {
        <h2 class="text-center">Inicio de sesión</h2>
        <div class="form-group">
            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre de usuario" } })
            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning btn-block" style="color: #FFF;">Acceder</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Recordarme</label>
        </div>
    }
</div>
<br />
<p class="text-center">
    @Html.ActionLink("Crear cuenta", "signup", "login")
</p>